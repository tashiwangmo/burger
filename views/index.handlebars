<h2>Add A Burger</h2>
<div class="row">
    <div class="col s12">
        <form action="/burgers" method="POST" id= "addburger">
            <input type="text" id="name" name="burger_name" placeholder="Uber Delicious Burger">
            <button type="submit" class="addBurgerButton">Add a Burger</button>
        </form>
    </div>
</div>

<h1>Eat-Da-Burger!</h1>
<main>
    <div class="container">
        <div class="row">
            
            <div class="col s6">
                <h2>Devour it!</h2>
                {{#each burgers}} {{#unless this.devoured}}
                <div>
                    <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                        <button type="submit" class='burgerAvailable' data-burgerid="{{this.id}}"> {{this.burger_name}}</button>
                    </form>
                </div>
                {{/unless}} {{/each}}
            </div>
            
            <div class="col s6">
                <h2>Already Eaten!</h2>
                {{#each burgers}} {{#if this.devoured}}
                <div >
                    <form action="/burgers/{{this.id}}?_method=Delete" method="DELETE">
                        <button type="submit" class='burgerEaten' data-burgerid="{{this.id}}">
                        {{this.burger_name}}
                    </button>
                </div>
                {{/if}} {{/each}}
            </div>
        </div>
    </div>
</main>

